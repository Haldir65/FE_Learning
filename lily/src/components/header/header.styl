.header
  position: fixed
  top: 0
  left: 0
  right: 0
  z-index: 10
  width: 100%
  min-height: 50px
  font-size: 1.8px
  line-height: 50px
  background-color: #03a9f4
  color: #fff
  text-align: center
  display: table
  box-shadow: 0 1px rgba(0,0,0,.1) rgba(0,0,0,.1)
  transition: all .3s ease
  &.show
      transform: translateX(200px)
  .title
      min-height: 50px
      position: absolute
      margin: 0
      text-align: center
      white-space: nowrap
      right: 100px
      left: 100px
      font-size: 16px
      width: auto
      overflow: hidden
      text-overflow: ellipsis
      z-index: 2
      font-weight: 500
  .pull-left
      padding: 0 10px
      font-size: 18px
      font-weight: 400px
      z-index: 2
      -webkit-box-sizing: border-box
      box-sizing: border-box
      display: flex
      align-items center
      float left
   .pull-right
       float right
       padding: 0 10px
       font-size: 16px
       font-weight: 400px
       box-sizing: border-box
       align-content: center
       justify-content: center
       z-index: 2
       .icon
           font-size: 18px


      